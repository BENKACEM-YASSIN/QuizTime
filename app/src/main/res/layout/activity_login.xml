<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#03a9f4"
   android:gravity="center"
    tools:context="com.example.quiztime.quiztime.Login">

    <!--ID icone == imicon-->
    <!--ID edit text elail == emaill-->
    <!-- ID edit text password == passl -->
    <!-- ID Button login = login -->
    <!-- ID Button Regester Hier = regesterl -->
    <!-- ID card = c1 -->



    <ImageView
        android:layout_width="181dp"
        android:layout_height="144dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/qtl"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/imicon"
        android:layout_marginBottom="50dp"

        />

    <EditText

        style="@style/edit"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:drawableLeft="@drawable/ic_action_email"

        android:id="@+id/emaill" />

    <EditText
        style="@style/edit"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:inputType="textPassword"
        android:hint="Password"
        android:drawableLeft="@drawable/ic_action_pass"
        android:id="@+id/passl"
        />

    <android.support.v7.widget.CardView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:cardBackgroundColor="@color/logiin"
        app:cardCornerRadius="25dp"

        android:id="@+id/c1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Login"
                android:onClick="signinButtonClicked"
                android:textColor="#fff"
                android:background="#00ffffff"

                android:id="@+id/login"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <Button

        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Regester here"
        android:textColor="#ffff"
        android:background="#00ffffff"
        android:id="@+id/regesterl"
        android:onClick="startsignup" />



</LinearLayout>

